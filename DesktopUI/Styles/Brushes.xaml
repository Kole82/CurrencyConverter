<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TransparentBrush"
                     Color="{StaticResource Transparent}"/>
    
    <SolidColorBrush x:Key="BackgroundWhiteBrush"
                     Color="{StaticResource BackgroundWhite}"/>

    <SolidColorBrush x:Key="BackgroundGrayBrush"
                     Color="{StaticResource BackgroundGray}"/>

    <SolidColorBrush x:Key="ForegroundBrightBlueBrush"
                     Color="{StaticResource ForegroundLightBlue}"/>

    <SolidColorBrush x:Key="ForegroundDarkBlueBrush"
                     Color="{StaticResource ForegroundDarkBlue}"/>

    <SolidColorBrush x:Key="ForegroundLightGrayBrush"
                     Color="{StaticResource ForegroundLightGray}"/>

    <SolidColorBrush x:Key="ForegroundDarkGrayBrush"
                     Color="{StaticResource ForegroundDarkGray}"/>

    <SolidColorBrush x:Key="ErrorLightRedBrush"
                     Color="{StaticResource ErrorLightRed}"/>
</ResourceDictionary>